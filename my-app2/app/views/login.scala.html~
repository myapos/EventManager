@(form: Form[Application.Login])
@main(title = "Login Page", null) {

@helper.form(routes.Application.authenticate) {
   <h1>Sign in</h1>

   <p>
        <!--<input type="email" name="email" placeholder="Email" value="@form("email").value">-->
      <input type="text" name="username" placeholder="username" value="@form("username").value">
   </p>
   <p>
       <input type="password" name="password" placeholder="Password">
   </p>
   <p>
       <button type="submit">Login</button>
   </p>
   @if(form.hasGlobalErrors) {
    <p class="error">
        @form.globalError.message
    </p>
	}
	@if(flash.contains("success")) {
    <p class="success">
        @flash.get("success")
    </p>
}
}
}


